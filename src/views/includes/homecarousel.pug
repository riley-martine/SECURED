- var images = ["home1.png", "home2.png", "home3.png"];
div.carousel.slide#carousel(data-ride="carousel")
  ol.carousel-indicators
    - var imageShift = images.shift();
    li.active(data-target="#carousel", data-slide-to=index)
    each image, index in images
      li(data-target="#carousel", data-slide-to=index)
  div.carousel-inner(role="listbox")
    div.carousel-item.active
      img.d-block.img-fluid(src="img/home/"+ imageShift)
    each image in images
      div.carousel-item
        img.d-block.img-fluid(src="img/home/"+ image)

  <a class="carousel-control-prev" href="#carousel" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carousel" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
