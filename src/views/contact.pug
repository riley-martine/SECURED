extends templates/layout.pug

block content
	div.container-fluid
		div.card.contact-form
			div.card-block
				h4.card-title Contact Us
				form(action="https://formspree.io/***REMOVED***", method="POST")
					div.form-group
						label(for="name") First & last name:
						input.form-control(type="text" name="name" id="name")
					div.form-group
						label(for="email") Your email:
						input.form-control(type="email" name="_replyto" id="email")
					div.form-group
						label(for="message") Your Message:
						textarea.form-control(name="message" id="message" rows="3")
					button.btn.btn-primary(type="submit") Submit
